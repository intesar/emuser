<?xml version="1.0" encoding="UTF-8"?>
<beans
  xmlns="http://www.springframework.org/schema/beans"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xmlns:dwr="http://www.directwebremoting.org/schema/spring-dwr"
  xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-2.0.xsd
    http://www.directwebremoting.org/schema/spring-dwr
    http://www.directwebremoting.org/schema/spring-dwr-2.0.xsd">
    
    
    <!--
     ##########################################################################
                            Services Declerations Begin
     ##########################################################################
    -->

  
    <bean id="usersAjaxService" class="com.bia.imec.ajax.service.UsersAjaxService" >
        <dwr:remote javascript="AjaxUsersService">
            <dwr:include method="getAllUsers" />
            <dwr:include method="saveUsers" />
            <dwr:include method="saveUsers" />
            <dwr:include method="createUsers" />
            <dwr:include method="disableUsers" />
            <dwr:include method="enableUsers" />
        </dwr:remote>
    </bean>
    <bean id="emailsAjaxService" class="com.bia.imec.ajax.service.EmailsAjaxService" >
        <dwr:remote javascript="AjaxEmailsService">
            <dwr:include method="getAllMailServers" />
            <dwr:include method="getAllEmails" />
            <dwr:include method="createEmailserver" />
            <dwr:include method="getAllContacts" />
            <dwr:include method="createMailServers" />
            <dwr:include method="updateEmails" />
            <dwr:include method="deleteMailServers" />
        </dwr:remote>
    </bean>
    <dwr:configuration>
        <dwr:convert type="bean" class="com.bia.imec.entity.*" />
        <dwr:convert type="bean"  class="java.util.*"  />
    </dwr:configuration>
</beans>