<?xml version="1.0" encoding="UTF-8"?>
<persistence version="1.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_1_0.xsd">
  <persistence-unit name="TrainingPortletAppPU" transaction-type="RESOURCE_LOCAL">
    <provider>oracle.toplink.essentials.ejb.cmp3.EntityManagerFactoryProvider</provider>
    <class>com.abbt.training.persistence.Course</class>
    <class>com.abbt.training.persistence.CourseOffered</class>
    <class>com.abbt.training.persistence.ContactedUsComments</class>
    <class>com.abbt.training.persistence.Instructor</class>
    <class>com.abbt.training.persistence.CourseDetail</class>
    <class>com.abbt.training.persistence.ContactUs</class>
    <class>com.abbt.training.persistence.ContactedUs</class>
    <properties>
      <property name="toplink.jdbc.user" value="root"/>
      <property name="toplink.jdbc.password" value="apple123"/>
      <property name="toplink.jdbc.url" value="jdbc:mysql://localhost:3306/trainingdb"/>
      <property name="toplink.jdbc.driver" value="com.mysql.jdbc.Driver"/>
    </properties>
  </persistence-unit>
</persistence>
